@page
@model WebApplication_Razor.Pages.Categories.IndexModel

<div class="container">

	<div class="row pt-2 pb-3">
		<div class="col-6">
			<h1 class="pt-2 text-primary">Category List</h1>
		</div>
		<div class="col-6 text-end">
			<a asp-page="/categories/create" class="btn btn-dark">
				<i class="bi bi-plus-square"></i> Create
			</a>
		</div>
	</div>



	<table class="table table-hover" table-bordered table-striped>
		<thead>
			<tr class="table-primary">
				<th>
					Category Name
				</th>
				<th>
					Display Order
				</th>
				<th>
					Action
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var obj in Model.Categories.OrderBy(c => c.DisplayOrder))
			{
				<tr class="table-secondary">
					<td>@obj.Name</td>
					<td>@obj.DisplayOrder</td>
					<td>
						<div class="btn-group w-100" role="group">

							<a asp-page="/categories/edit" asp-route-id="@obj.Id"
							   class="btn btn-outline-primary mx-2">
								<i class="bi bi-pencil-square"></i> Edit
							</a>

							<a asp-page="/categories/delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
								<i class="bi bi-trash"></i> Delete
							</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
