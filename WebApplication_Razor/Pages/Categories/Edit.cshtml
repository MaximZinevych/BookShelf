@page
@model WebApplication_Razor.Pages.Categories.EditModel

<div class="container">
	<form method="post">
		<input asp-for="Category.Id" hidden />
		<div class="row pt-2 pb-3">
			<div class="row pb-2">
				<h1 class="pt-2 text-primary">Edit Category</h1>
			</div>
		</div>

		<div asp-validation-summary="All" class="mb-3 text-danger"></div>

		<div class="row">
			<div class="col">
				<div class="mb-3">
					<label asp-for="Category.Name"></label>
					<input asp-for="Category.Name" class="form-control" />
					<span asp-validation-for="Category.Name" class="text-danger"></span>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col">
				<div class="mb-3">
					<label asp-for="Category.DisplayOrder"></label>
					<input asp-for="Category.DisplayOrder" class="form-control" />
					<span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
				</div>
			</div>
		</div>

		<div class="row justify-content-end">
			<div class="col-2">
				<a class="btn btn-outline-secondary w-100"
						asp-page="/categories/index">
					<i class="bi bi-box-arrow-in-left"></i>
					Back
				</a>
			</div>

			<div class="col-2">
				<button class="btn btn-primary w-100" type="submit">
					<i class="bi bi-floppy"></i>
					Update
				</button>
			</div>
		</div>

	</form>
</div>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
